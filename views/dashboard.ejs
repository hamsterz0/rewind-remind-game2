                </div>
                <div class="column box-col">
                    <% var disabled; var lock; if(user.current < 22) {disabled = 'is-disabled'; lock = 'fa fa-lock fa-2x is-overlay'; } else {disabled = ''; lock = '';} %>
                    <a href="/game" class="button is-danger is-large <%= disabled %>"><i class="text-center <%= lock %>"></i>Game 2</a>
                </div>
                <div class="column box-col">
                    <% var disabled; var lock; if(user.current < 23) {disabled = 'is-disabled'; lock = 'fa fa-lock fa-2x is-overlay'; } else {disabled = ''; lock = '';} %>
                    <a href="/game" class="button is-danger is-large <%= disabled %>"><i class="text-center <%= lock %>"></i>Game 3</a>
                </div>
            </div>

            <div class="columns w-col">
                <div class="column box-col">
                    <h1>Week 3</h1>
                </div>
                <div class="column box-col">
                    <% var disabled; var lock; if(user.current < 31) {disabled = 'is-disabled'; lock = 'fa fa-lock fa-2x is-overlay'; } else {disabled = ''; lock = '';} %>
