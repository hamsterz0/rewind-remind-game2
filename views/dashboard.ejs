                        <i class=" <%= lock %> text-center"></i>Game 2</a>
                </div>
                <div class="column box-col">
                    <% var disabled; var lock; if(user.current < 13) {disabled = 'is-disabled'; lock = 'fa fa-lock fa-2x is-overlay'; } else {disabled = ''; lock = '';} %>
